<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_login_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.benitkibabu.sap.LoginActivity" >

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/logout_btn"
        android:textColor="@color/bg_main"
        android:textColorHint="@color/bg_main" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="9" >

        <Space
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_row="1" />

        <Space
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_column="0"
            android:layout_row="7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:layout_row="5"
            android:text="Date de naissonce :"
            android:textColor="@color/darken" />

        <TextView
            android:id="@+id/textdatens"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_row="5"
            android:text=" date NS text"
            android:textColor="@color/darken" />

        <TextView
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:text="Situation Familiale:"
            android:textColor="@color/darken" />

        <TextView
            android:layout_width="112dp"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:layout_row="7"
            android:text="E-mail"
            android:textColor="@color/darken" />

        <TextView
            android:id="@+id/textstiuatio"
            android:layout_width="118dp"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="6"
            android:text=" Situation Text"
            android:textColor="@color/darken" />

        <TextView
            android:id="@+id/TextViewemail"
            android:layout_width="126dp"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="7"
            android:text="email Text"
            android:textColor="@color/darken" />

        <ImageView
            android:id="@+id/imageprofil"
            android:layout_width="127dp"
            android:layout_height="121dp"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="1"
            android:background="@drawable/img" />

        <TextView
            android:id="@+id/textprenom"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:layout_row="2"
            android:text="Prenom &amp; Nom Text"
            android:textColor="@color/darken"
            android:textSize="20dip"
            android:typeface="serif" />

    </GridLayout>

    </LinearLayout>