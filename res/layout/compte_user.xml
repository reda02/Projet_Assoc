<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="542dp"
       android:orientation="vertical" >

       <ImageView
           android:id="@+id/imageprofil"
           android:layout_width="136dp"
           android:layout_height="121dp"
           android:layout_gravity="center"
           android:layout_marginTop="30px"
           android:layout_row="1"
           android:background="@drawable/img" />

       <TextView
           android:id="@+id/textprenom"
           android:layout_width="match_parent"
           android:layout_height="46dp"
           android:layout_gravity="center"
           android:layout_marginTop="10px"
           android:layout_weight="0.01"
           android:text="Prenom &amp; Nom Text"
           android:textAlignment="center"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="@color/darken" >
       </TextView>

       <Button
           android:id="@+id/chgbtn"
           android:layout_width="226dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="30px"
           android:background="@drawable/btn_back_blue"
           android:text="Change Password"
           android:textAlignment="center"
           android:textColor="#ffffff" />

       <Button
           android:id="@+id/btn_logout"
           android:layout_width="226dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="10px"
           android:background="@drawable/btn_back_blue"
           android:text="Logout"
           android:textAlignment="center"
           android:textColor="#ffffff" />

       <TextView
           android:id="@+id/textdatens"
           android:layout_width="207dp"
           android:layout_height="51dp"
           android:layout_gravity="center"
           android:layout_marginTop="30px"
           android:text=" date NS text"
           android:textAlignment="center"
           android:textColor="@color/darken" />

       <TextView
           android:id="@+id/textstiuatio"
           android:layout_width="207dp"
           android:layout_height="51dp"
           android:layout_gravity="center"
           android:layout_marginTop="30px"
           android:text=" Situation Text"
           android:textAlignment="center"
           android:textColor="@color/darken" />

       <TextView
           android:id="@+id/textviewemail"
           android:layout_width="207dp"
           android:layout_height="51dp"
           android:layout_gravity="center"
           android:layout_marginTop="30px"
           android:text="email Text"
           android:textAlignment="center"
           android:textColor="@color/darken" />

       <TextView
           android:id="@+id/textville"
           android:layout_width="207dp"
           android:layout_height="51dp"
           android:layout_gravity="center"
           android:layout_marginTop="30px"
           android:text=" ville NS text"
           android:textAlignment="center"
           android:textColor="@color/darken" />
   </LinearLayout>

</ScrollView>